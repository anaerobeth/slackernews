  </ul> -->
  <div class="login-link"><a href="#">login</a></div>
  <ul class="navigation-links">
    <li class="icon">
      <%= image_tag "ycombinator.jpeg"%>
    </li>
    <!-- <li class="icon">Y</li> -->
    <li class="title-link"><strong><a href="#">Slacker News</a></strong></li>
    <li><a href="#">new</a></li>
    <li class="list-link"><a href="#">comments</a></li>
    <li class="list-link"><a href="#">ask</a></li>
    <li class="list-link"><a href="#">jobs</a></li>
    <li class="list-link"><a href="#">submit</a></li>
  </ul>

</div>

<div class="main-container">
<%= yield %>
</div>

<div class="footer-container">
  <ul class="footer-links">
    <li><a href="#">Lists</a></li>
    <li class="list-link"><a href="#">RSS</a></li>
